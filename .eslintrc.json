{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["import"],
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "comma-dangle": "off",
    "no-console": "off",
    "arrow-body-style": "off",
    "no-async-promise-executor": "off",
    "import/prefer-default-export": "off",
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "linebreak-style": 0,
    "object-shorthand": 0,
    "import/extensions": [ 1, {
      "js": "always", "json": "always"
    }]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}